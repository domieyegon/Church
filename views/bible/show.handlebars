<div class="row">
    <div class="col s12 m12">
        <h3 class="to-capital">{{verse.title}}</h3>
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    {{dateFormat verse.date 'MMMM Do YYYY'}}
                </span>
                <p class="to-capital">{{verse.content}}</p>
                <br>
                <p>Posted by: <strong>{{verse.user.name}}</strong></p>
            </div>
        </div>
    </div>
</div>